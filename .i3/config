set $cyan	#2aa198
set $green	#859900
set $baseA4 #1c1d1c
set $baseA3 #002b36
set $baseA2 #073642
set $baseA1 #586e75
set $baseA0 #657b83
set $baseB0 #839496
set $baseB1 #93a1a1
